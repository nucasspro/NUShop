@using NUShop.ViewModel.ViewModels
@model List<CategoryViewModel>

<div id="jtv-mobile-menu">
    <ul>
        <li>
            <div class="jtv-search-mob">
                <form id="search1" name="search">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i> </button>
                        </div>
                        <input type="text" class="form-control simple" placeholder="Search ..." name="srch-term" id="srch-term">
                    </div>
                </form>
            </div>
        </li>

        <li>
            <a href="/"><span>Home</span></a>
        </li>

        @foreach (var item in Model.Where(x => x.ParentId == null))
        {
            <li>
                <a href="/@(item.SeoAlias)-@(item.Id).html">@(item.Name)</a>
                <ul>
                    @foreach (var subItem in Model.Where(y => y.ParentId == item.Id))
                    {
                        <li>
                            <a href="/@(subItem.SeoAlias)-@(subItem.Name).html"><span>@(subItem.Name)</span></a>
                            <ul>
                                @foreach (var subSubItem in Model.Where(z => z.ParentId == subItem.Id))
                                {
                                    <li> <a href="/@(subSubItem.SeoAlias)-@(subSubItem.Name).html"> <span>@(subSubItem.Name)</span> </a> </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </li>
        }



        <li><a href="shop_grid.html">Computers</a> </li>
    </ul>
    <div class="jtv-top-link-mob">
        <ul class="links">
            <li><a title="My Account" href="account_page.html">My Account</a> </li>
            <li><a title="Wishlist" href="wishlist.html">Wishlist</a> </li>
            <li><a title="Checkout" href="checkout.html">Checkout</a> </li>
            <li><a title="Blog" href="blog.html"><span>Blog</span></a> </li>
            <li class="last"><a title="Login" href="account_page.html"><span>Login</span></a> </li>
        </ul>
    </div>
</div>