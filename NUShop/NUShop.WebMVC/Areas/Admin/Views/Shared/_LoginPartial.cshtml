@using Microsoft.AspNetCore.Identity
@using NUShop.WebMVC.Extensions
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<img class="avatar user-thumb" src="@User.GetSpecificClaim("Avatar")" alt="avatar">
<h4 class="user-name dropdown-toggle" data-toggle="dropdown">@User.GetSpecificClaim("FullName") <i class="fa fa-angle-down"></i></h4>
<div class="dropdown-menu">
    <a class="dropdown-item" href="#">Message</a>
    <a class="dropdown-item" href="#">Settings</a>
    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" id="formLogout">
        <button type="submit" class="dropdown-item">Logout</button>
    </form>
</div>